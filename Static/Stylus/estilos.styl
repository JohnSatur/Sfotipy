@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit moz ms o official

// animacion(parametro)
// 	-webkit-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	-ms-animation parametro
// 	animation parametro
	
gris_claro = #818181
gris_oscuro = #333333
gris_mas_claro = #F0F0F0
fucsia = #BD255B

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
figure
	margin 0

img
	vertical-align top

ul
	margin 0
	padding 0
//Botones
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss Clases
.action
	color white
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
		-webkit-transition color .1s
		-moz-transition color 1s
		-ms-transition color 1s
		-o-transition color 1s

.actions
	background rgba(black, .3)
	bottom 0
	font-size 1.2em
	left 0
	position absolute
	right 0

.border-bottom
	border-bottom 1px solid gris_claro

.center-block
	margin 0 auto
	
.center-text
	text-align center

.container
	padding 1.4rem
	font-size 0
	text-align center
	
.name
	color gris_oscuro
	
.menu
	display none

.relative
	position relative
	
.padding
	padding 1em
	
.padding-tb
	padding 1em 0
	
.left
	float left

.right
	float right
	
.round
	border-radius 50%
	overflow hidden

.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
		
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
		
		.state
			background fucsia
			border-radius 5px
			height 5px 
			position relative
			width 30%
			animation 10s state infinite linear
			
		.circle
			background gris_oscuro
			border-radius 50%
			height 10px
			position absolute
			right 0
			top -2px
			width 10px
			animation 1s circle infinite

@keyframes state
	0%
		width 0
	100%
		width 100%	

@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(1.3)
		opacity 0

.right-text
	text-align right

.singer
	color gris_claro

.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	width 8rem
	text-align left
	
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em
		margin 0 auto

.wrap
	width 1000px
		
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 3px
	padding 0 1.3em 0 2em
	margin-right 1.5em

.lupa
	position absolute
	top .8em
	left .5em
	color gris_claro

.close-icon
	position absolute
	top .5em
	color gris_claro
	right 2em
	font-size 1.1em
	
.add:hover
	color #E2DD05

.favorites:hover
	color fucsia

.share:hover
	color purple

.playlist
	display none
	
.logo
	display none

@media screen and (min-width: 480px)
	.song
		&:nth-child(even)
			margin-right 1.2em
	.image
		img
			width 100%
			height auto

	.playing
		&.medium
			width auto
			
@media screen and (min-width: 1000px)
	body
		background gris_mas_claro

	.button-menu
		display none
	
	.playing
		padding-top 1em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro

		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	
	.music
		width 32.5em
		float left
		.description
			display none
	
	.playlist
		width 23em
		display block
		padding 0 2em
		border-left 1px solid gris_claro
		.list
			list-style none
		.item
			padding 1em 0
		.action
			font-size 1.1em
			
	.header
		height auto
		border none
		.title
			display none
	
	.isotipo
		width 122px
	
	.logo
		padding 1.3em 0
		background white
		display block
		overflow hidden
	.avatar
		width 38px
		height 38px
	
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			border-left 7px solid transparent
			border-top 9px solid gris_claro
			border-right 7px solid transparent
			display inline-block
			margin-left .4em