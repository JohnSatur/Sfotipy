@import "normalize.styl"
@import "fonts.styl"

gris_claro = #818181
gris_oscuro = #333333
fucsia = #BD255B

a
	text-decoration none

body
	font-family 'Varela Round', sans-serif
	font-size 16px
	
figure
	margin 0

img
	vertical-align top
//Botones
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss Clases
.action
	color white
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	background rgba(black, .3)
	bottom 0
	font-size 1.2em
	left 0
	position absolute
	right 0

.border-bottom
	border-bottom 1px solid gris_claro

.center-block
	margin 0 auto
	
.center-text
	text-align center

.container
	padding 1.4rem
	font-size 0
	text-align center
	
.name
	color gris_oscuro
	
.menu
	display none

.relative
	position relative
	
.padding
	padding 1em
	
.padding-tb
	padding 1em 0
	
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
		
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
		
		.state
			background fucsia
			border-radius 5px
			height 5px 
			position relative
			width 30%
			.circle
				background gris_oscuro
				border-radius 50%
				height 10px
				position absolute
				right 0
				top -2px
				width 10px

.right-text
	text-align right

.singer
	color gris_claro

.header
	height 3.5em
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	width 8rem
	text-align left
	
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em